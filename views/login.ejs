<%- include('header'); -%>

    <body>
        <div class="position-absolute top-50 start-50 translate-middle border" style="width: 500px;">
            <form class="p-5" action="/login" method="post">
                <h2 class="text-center ">Login</h2>
                <div class="form-text text-center mb-2">Welcome Back!</div>
                <% if (typeof(error) !="undefined" ){ %>
                    <div class="border border-light bg-danger bg-opacity-10 text-danger p-2 rounded mb-2">
                        <%= error %>
                    </div>
                    <% } %>
                        <div class="mb-3">
                            <label for="exampleInputEmail1" class="form-label">Email address</label>
                            <input type="email" name="email" placeholder="e.g hello@gmail.com" required
                                class="form-control" aria-describedby="emailHelp">
                        </div>
                        <div class="mb-3">
                            <label for="exampleInputPassword1" class="form-label">Password</label>
                            <input type="password" name="password" placeholder="Must have at least 12 characters"
                                required class="form-control">
                        </div>
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">Login</button>
                        </div>

                        <p class="mt-3">Don't have an account yet? <a class="text-decoration-none" href="/signup">Sign
                                Up</a></p>
            </form>
        </div>


    </body>

    <%- include('footer'); -%>